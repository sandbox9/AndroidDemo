<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#000"
                android:layout_below="@+id/header">

    <RadioGroup
        android:id="@+id/mainMenuGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:measureWithLargestChild="true"
        android:layout_gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainMenu01"
            android:layout_centerVertical="true"
            android:button="@drawable/btn_top_home"
            android:checked="false"
            android:layout_weight="1"
            android:background="@drawable/btn_top_background"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="16dp"
            android:onClick="onRadioButtonClicked"
            android:focusable="false"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainMenu02"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mainMenu01"
            android:checked="false"
            android:button="@drawable/btn_top_01"
            android:layout_weight="1"
            android:background="@drawable/btn_top_background"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:onClick="onRadioButtonClicked"/>


        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainMenu03"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mainMenu02"
            android:checked="false"
            android:button="@drawable/btn_top_02"
            android:layout_weight="1"
            android:background="@drawable/btn_top_background"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainMenu04"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mainMenu02"
            android:checked="false"
            android:button="@drawable/btn_top_03"
            android:layout_weight="1"
            android:background="@drawable/btn_top_background"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainMenu05"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mainMenu02"
            android:checked="false"
            android:button="@drawable/btn_top_04"
            android:layout_weight="1"
            android:background="@drawable/btn_top_background"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainMenu06"
            android:checked="false"
            android:button="@drawable/btn_top_05"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/mainMenu05"
            android:layout_weight="1"
            android:background="@drawable/btn_top_background"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>
</RelativeLayout>
