<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Non focused states -->
    <item android:drawable="@drawable/gsshop_tab_unselect"
          android:state_focused="false" android:state_selected="false" android:state_pressed="false" />
    <item android:drawable="@drawable/gsshop_tab_select"
          android:state_focused="false" android:state_selected="true" android:state_pressed="false" />

    <!-- Focused states (such as when focused with a d-pad or mouse hover) -->
    <item android:drawable="@drawable/gsshop_tab_unselect"
          android:state_focused="true" android:state_selected="false" android:state_pressed="false" />
    <item android:drawable="@drawable/tab_selected"
          android:state_focused="true" android:state_selected="true" android:state_pressed="false"  />

    <!-- STATES WHEN BUTTON IS PRESSED -->
    <!-- Non focused states -->
    <item android:drawable="@drawable/gsshop_tab_unselect"
          android:state_focused="false" android:state_selected="false" android:state_pressed="true" />
    <item android:drawable="@drawable/gsshop_tab_select"
          android:state_focused="false" android:state_selected="true" android:state_pressed="true" />

    <!-- Focused states (such as when focused with a d-pad or mouse hover) -->
    <item android:drawable="@drawable/gsshop_tab_unselect"
          android:state_focused="true" android:state_selected="false" android:state_pressed="true" />
    <item android:drawable="@drawable/gsshop_tab_select"
          android:state_focused="true" android:state_selected="true" android:state_pressed="true" />
</selector>