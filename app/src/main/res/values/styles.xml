<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <!-- GS Shop Theme -->
    <style name="GSShopTheme"
           parent="@android:style/Theme.Holo.Light">
        <!--
        <item name="android:actionBarStyle">@style/GSActionBarTheme</item>
        <item name="android:actionBarTabTextStyle">@style/GSActionBarTabText</item>
        <item name="android:actionBarTabStyle">@style/GSActionBarTabStyle</item>
        <item name="android:actionMenuTextColor">#fff</item>
        -->
    </style>

    <style name="GSActionBarTabStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/gsshop_tabnavi_indicator</item>
    </style>


    <style name="GSActionBarTheme"
           parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/gsshop_tabnavi_indicator</item>
    </style>
    <style name="GSActionBarTabText"
           parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@color/black</item>
    </style>
    <!--
    -->

    <!-- ActionBar tabs styles -->
    <style name="GSActionBarTabs"
           parent="android:Widget.ActionBar.TabBar">
        <!-- tab indicator -->
        <item name="android:background">@drawable/gsshop_tabnavi_indicator</item>
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
           parent="@android:style/Theme.Holo">
        <item name="android:actionBarTabStyle">@style/CustomTheme</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs"
           parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/gsshop_tabnavi_indicator</item>
    </style>

    <style name="MyActionBarTabText"
           parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTheme" parent="@android:style/Theme">
        <item name="android:tabWidgetStyle">@style/CustomTabWidget</item>
    </style>

    <style name="CustomTabWidget" parent="@android:style/Widget.TabWidget">
        <item name="android:textAppearance">@style/CustomTabWidgetText</item>
    </style>

    <style name="CustomTabWidgetText"
           parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <!--  <item name="android:textStyle">bold</item> -->
    </style>
</resources>
